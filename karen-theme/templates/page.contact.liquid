<div class="bg-amber-50 py-12">
  <div class="container mx-auto px-4">
    <h1 class="text-5xl font-bold text-center text-green-800 mb-8 font-cursive">{{ page.title }}</h1>
    
    <div class="max-w-4xl mx-auto">
      <div class="bg-white p-8 rounded-lg border-2 border-green-800 shadow-lg mb-8">
        <div class="prose max-w-none">
          {{ page.content }}
        </div>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-amber-100 p-6 rounded-lg border-2 border-green-800 transform rotate-1 shadow-lg">
          <h2 class="text-3xl font-bold text-green-800 mb-4 font-cursive">Get In Touch</h2>
          
          {% form 'contact' %}
            {% if form.posted_successfully? %}
              <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                <p>Thanks for contacting us! We'll get back to you as soon as possible.</p>
              </div>
            {% endif %}
            
            {% if form.errors %}
              <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                <p>Please correct the following:</p>
                {{ form.errors | default_errors }}
              </div>
            {% endif %}
            
            <div class="mb-4">
              <label for="ContactFormName" class="block text-lg font-bold text-green-800 mb-2">Name</label>
              <input type="text" id="ContactFormName" name="contact[name]" class="w-full p-3 border-2 border-amber-200 rounded-lg focus:border-green-800 focus:ring focus:ring-green-200 focus:ring-opacity-50">
            </div>
            
            <div class="mb-4">
              <label for="ContactFormEmail" class="block text-lg font-bold text-green-800 mb-2">Email</label>
              <input type="email" id="ContactFormEmail" name="contact[email]" class="w-full p-3 border-2 border-amber-200 rounded-lg focus:border-green-800 focus:ring focus:ring-green-200 focus:ring-opacity-50" required>
            </div>
            
            <div class="mb-4">
              <label for="ContactFormPhone" class="block text-lg font-bold text-green-800 mb-2">Phone</label>
              <input type="tel" id="ContactFormPhone" name="contact[phone]" class="w-full p-3 border-2 border-amber-200 rounded-lg focus:border-green-800 focus:ring focus:ring-green-200 focus:ring-opacity-50">
            </div>
            
            <div class="mb-6">
              <label for="ContactFormMessage" class="block text-lg font-bold text-green-800 mb-2">Message</label>
              <textarea id="ContactFormMessage" name="contact[body]" rows="6" class="w-full p-3 border-2 border-amber-200 rounded-lg focus:border-green-800 focus:ring focus:ring-green-200 focus:ring-opacity-50" required></textarea>
            </div>
            
            <button type="submit" class="w-full py-3 bg-green-800 text-white rounded-full font-bold text-lg hover:bg-green-700 transform transition hover:scale-105">
              Send Message
            </button>
          {% endform %}
        </div>
        
        <div>
          <div class="bg-amber-100 p-6 rounded-lg border-2 border-green-800 transform -rotate-1 shadow-lg mb-6">
            <h2 class="text-3xl font-bold text-green-800 mb-4 font-cursive">Contact Information</h2>
            
            <div class="space-y-4">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-green-800 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <div>
                  <h3 class="font-bold text-green-800">Email</h3>
                  <p>info@karenphytoplankton.com</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <svg class="w-6 h-6 text-green-800 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <div>
                  <h3 class="font-bold text-green-800">Phone</h3>
                  <p>1-800-KAREN-PH (1-800-527-3674)</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <svg class="w-6 h-6 text-green-800 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <div>
                  <h3 class="font-bold text-green-800">Address</h3>
                  <p>123 Ocean Way<br>Vancouver, BC V6Z 2H7<br>Canada</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-amber-100 p-6 rounded-lg border-2 border-green-800 transform rotate-1 shadow-lg">
            <h2 class="text-3xl font-bold text-green-800 mb-4 font-cursive">Business Hours</h2>
            
            <div class="space-y-2">
              <div class="flex justify-between">
                <span class="font-bold text-green-800">Monday - Friday:</span>
                <span>9:00 AM - 5:00 PM PST</span>
              </div>
              <div class="flex justify-between">
                <span class="font-bold text-green-800">Saturday:</span>
                <span>10:00 AM - 2:00 PM PST</span>
              </div>
              <div class="flex justify-between">
                <span class="font-bold text-green-800">Sunday:</span>
                <span>Closed</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

