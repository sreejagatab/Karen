<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center text-green-800 mb-12 font-cursive">
      {{ section.settings.heading }}
    </h2>
    <div class="max-w-3xl mx-auto bg-amber-100 p-8 rounded-lg border-2 border-green-800 transform -rotate-1 shadow-lg">
      <h3 class="text-2xl font-bold text-green-800 mb-6">{{ section.settings.subheading }}</h3>
      <ul class="space-y-4">
        {% for block in section.blocks %}
          {% if block.type == 'point' %}
            <li class="flex items-start">
              <span class="flex-shrink-0 h-6 w-6 bg-green-800 rounded-full flex items-center justify-center text-white font-bold mr-3">âœ“</span>
              <span class="text-lg">{{ block.settings.text }}</span>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
      {% if section.settings.footer_text != blank %}
        <div class="mt-8 text-center">
          <span class="inline-block px-4 py-2 bg-amber-300 text-green-800 font-bold rounded-full transform rotate-2 border border-green-800">
            {{ section.settings.footer_text }}
          </span>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Reset Foundation",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Reset Your Foundation"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "The Wrong Foundation = Sub Par Results"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "Here's Some Exciting News....For a change"
    }
  ],
  "blocks": [
    {
      "type": "point",
      "name": "Point",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Point Text",
          "default": "If you have the wrong grip you will never be a good golfer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reset Foundation",
      "category": "Custom",
      "blocks": [
        {
          "type": "point"
        },
        {
          "type": "point"
        },
        {
          "type": "point"
        }
      ]
    }
  ]
}
{% endschema %}
