<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center">
      <div class="md:w-1/2 mb-8 md:mb-0">
        <div class="bg-amber-100 p-8 rounded-lg border-2 border-green-800 transform rotate-1 shadow-lg">
          <h3 class="text-3xl font-bold text-green-800 mb-6 font-cursive">{{ section.settings.heading }}</h3>
          <ul class="space-y-4">
            {% for block in section.blocks %}
              {% if block.type == 'feature' %}
                <li class="flex items-start">
                  <span class="flex-shrink-0 h-6 w-6 bg-green-800 rounded-full flex items-center justify-center text-white font-bold mr-3">â€¢</span>
                  <span class="text-lg">{{ block.settings.text }}</span>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
          {% if section.settings.quote != blank %}
            <p class="mt-6 text-lg italic border-t-2 border-amber-300 pt-4">
              "{{ section.settings.quote }}"
            </p>
          {% endif %}
        </div>
      </div>
      <div class="md:w-1/2 flex justify-center">
        <div class="relative">
          {% if section.settings.image != blank %}
            <img src="{{ section.settings.image | img_url: '600x600', crop: 'center' }}" alt="{{ section.settings.image.alt | escape }}" class="rounded-lg shadow-lg border-4 border-amber-200">
          {% else %}
            <div class="w-full h-96 bg-amber-50 rounded-lg shadow-lg border-4 border-amber-200 flex items-center justify-center">
              <p class="text-green-800">Add product image</p>
            </div>
          {% endif %}
          
          {% if section.settings.show_price_badge %}
            <div class="absolute -top-6 -right-6 bg-amber-300 text-green-800 rounded-full h-24 w-24 flex items-center justify-center font-bold transform rotate-12 border-2 border-green-800">
              <div class="text-center">
                <div class="text-xl">Only</div>
                <div class="text-2xl">${{ section.settings.price }}</div>
                <div class="text-sm">per day</div>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Information",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What Is Karen Phytoplankton?"
    },
    {
      "type": "text",
      "id": "quote",
      "label": "Quote",
      "default": "If your mom knew.....this is the supplement she would have given you instead of Cod Liver Oil"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Product Image"
    },
    {
      "type": "checkbox",
      "id": "show_price_badge",
      "label": "Show Price Badge",
      "default": true
    },
    {
      "type": "text",
      "id": "price",
      "label": "Price Per Day",
      "default": "2"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "It's a single cell plant 1/3 the size of a blood cell"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Information",
      "category": "Custom",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}
